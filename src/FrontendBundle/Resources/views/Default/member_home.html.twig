{% extends "FrontendBundle::base.html.twig" %}

{% form_theme uploadForm 'CoreBundle::form_theme.html.twig' %}

{% block body %}
    <div class="row mt-xl-5">
        <div class="col-12">
            <div class="p-3 border border-light">
                <h4>Share a File</h4>
                {{ form_start(uploadForm) }}
                {{ form_widget(uploadForm) }}
                <button type="submit" class="btn btn-primary">Upload</button>
                {{ form_end(uploadForm) }}
            </div>
        </div>
    </div>
    <div class="row mt-xl-5">
        <div class="col-12">
            <div class="p-3 border border-light">
                <h4>Latest Shares</h4>
                <table class="table">
                    <thead>
                    <tr>
                        <th>File</th>
                        <th>Share Key</th>
                        <th>Protected</th>
                        <th>Date Created</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if shares is empty %}
                        <tr>
                            <td colspan="3" class="text-center">No uploads</td>
                        </tr>
                    {% else %}
                        {% for share in shares %}
                            <tr>
                                <td>{{ share.originalFilename }}</td>
                                <td>{{ share.shareKey }}</td>
                                <td>
                                    {% if share.password != null %}
                                        <span class="badge badge-success">Yes</span>
                                    {% else %}
                                        <span class="badge badge-danger">No</span>
                                    {% endif %}
                                </td>
                                <td>{{ share.dateCreated|date("d-M-Y H:m:s") }}</td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}