{% extends "FrontendBundle::base.html.twig" %}

{% form_theme register_form 'bootstrap_3_layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h3>Log In</h3>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-12">
            <h3>New User</h3>
            {% if error is defined and error != null %}
                <div class="alert alert-danger">
                    {{ error }}
                </div>
            {% endif %}
            {{ form_start(register_form) }}
            {{ form_widget(register_form) }}
            <button type="submit" class="btn btn-primary btn-lg">Register</button>
            {{ form_end(register_form) }}
        </div>
    </div>
{% endblock %}